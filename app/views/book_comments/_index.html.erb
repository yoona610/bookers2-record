<% book.book_comments.each do |book_comment| %>
  <tr>
    <td><p><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %></p></td>
    <td><%= book_comment.user.name %></td>
    <td><%= book_comment.comment %></td>
  <% if book_comment.user == current_user %>
    <td>
      <div class="comment-delete">
        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
      </div>
    </td>
  <% end %>
  </tr>
<% end %>